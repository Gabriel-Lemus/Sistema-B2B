{{#each errors}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{text}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{{/each}}

<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>New Device</h3>
        </div>
        <div class="card-body">
            <form class="needs-validation" novalidate action="/devices/new-device" method="POST">
                <div class="input-group mb-3">
                    <label for="validationDeviceTitle" class="form-label"></label>
                    <input type="text" name="title" class="form-control" id="validationDeviceTitle" placeholder="Title" autofocus required>
                    <div class="invalid-feedback">Please provide a title.</div>
                </div>
                <div class="input-group mb-3">
                    <label for="validationDescription" class="form-label"></label>
                    <textarea name="description" class="form-control" id="validationDescription" placeholder="Description" required></textarea>
                    <div class="invalid-feedback">Please provide a description.</div>
                </div>
                <div class="input-group mb-3">
                    <button class="btn btn-primary w-100" type="submit">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
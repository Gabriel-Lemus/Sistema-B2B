<div class="row">
    {{#each devices}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{title}} <a href="/devices/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                    </h4>
                    <p>{{description}}</p>
                    <form action="/devices/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger w-100 btn-sm" type="submit">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <p class="lead">There are not devices yet.</p>
                    <a href="/devices/add" class="btn btn-success w-100">Launch One!</a>
                </div>
            </div>
        </div>
    {{/each}}
</div>
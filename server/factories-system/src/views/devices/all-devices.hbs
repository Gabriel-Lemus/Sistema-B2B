<div class="col-md-4 p-2 mx-auto text-center">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Device Catalog</h2>
            <a href="/devices/add" class="btn btn-success w-100">Add a new one!</a>
        </div>
    </div>
</div>
<div class="row">
    {{#each devices}}
        <div class="col-md-3 p-2">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{title}} <a href="/devices/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                    </h4>
                    <p>{{description}}.</p>
                    <p>Model Code: {{model_code}}</p>
                    <p>Category: {{category}}</p>
                    <p>Kind: {{kind}}</p>
                    <p>Brand: {{brand}}</p>
                    <p>Color: {{color}}</p>
                    <p>Warranty Time: {{warranty_time}} years</p>
                    <p>Shipping Time: {{shipping_time}} days</p>
                    <p>Price: Q{{price}}</p>
                    <form action="/devices/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger w-100 btn-sm" type="submit">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <p class="lead">There are not devices yet.</p>
                    <a href="/devices/add" class="btn btn-success w-100">Launch One!</a>
                </div>
            </div>
        </div>
    {{/each}}
</div>
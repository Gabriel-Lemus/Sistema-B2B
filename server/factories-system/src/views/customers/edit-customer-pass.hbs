<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Customer Password</h3>
        </div>
        <div class="card-body">
            <form class="needs-validation" novalidate action="/customers/edit-customer-pass/{{customer._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="input-group mb-3">
                    <label for="validationCustomerPass" class="form-label"></label>
                    <input type="password" name="password" class="form-control" id="validationCustomerPass" placeholder="New Password" autofocus required>
                    <div class="invalid-feedback">Please provide a new password.</div>
                </div>
                <div class="input-group mb-3">
                    <label for="validationCustomerCPass" class="form-label"></label>
                    <input type="password" name="confirm_password" class="form-control" id="validationCustomerCPass" placeholder="Confirm Password" required>
                    <div class="invalid-feedback">Please confirm the new password.</div>
                </div>
                <div class="input-group mb-3">
                    <button class="btn btn-primary w-100" type="submit">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
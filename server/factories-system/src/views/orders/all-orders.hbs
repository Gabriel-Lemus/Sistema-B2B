<div class="col-md-4 p-2 mx-auto text-center">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Orders</h2>
            <!--<a href="/orders/add" class="btn btn-success w-100">Add a new one!</a>-->
        </div>
    </div>
</div>
<div class="row">
    {{#each orders}}
        <div class="col-md-3 p-2">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{customer}} <!--<a href="/orders/edit/{{_id}}"><i class="fas fa-edit"></i></a>-->
                    </h4>
                    <p>Delivered: {{delivered}}</p>
                    <p>Delivery Date: {{delivery_date}}</p>
                    {{#each orders.devices}}
                    <p>Devices: </p>
                    <p>Quantity: {{quantity}}</p>
                    <p>Amount: Q{{amount}}</p>
                    {{/each}}
                    <p>Total: Q{{total}}</p>
                    <form action="/orders/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger w-100 btn-sm" type="submit">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h1>Hello</h1>
                    <p class="lead">There are not orders yet.</p>
                    <a href="/orders/add" class="btn btn-success w-100">Order One!</a>
                </div>
            </div>
        </div>
    {{/each}}
</div>